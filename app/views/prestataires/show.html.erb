<style>

	@media (min-width: 992px) {
		.paramsuser{
			position: relative;
			left: 1%;
		}
		.profilUser li{
			margin-bottom: 20px;
			position: relative;
			left: 0px
		}
		.UserInfos{
			margin-left: 30px;
		}
	}
	@media (max-width: 600px) {

		.profilUser li{
			font-size: 13px;
