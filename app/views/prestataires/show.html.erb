<body class="body-wrapper static">
	<div class="se-pre-con"></div>
	<div class="main-wrapper">

		<section class="">
			<div class="secotionTitle contactTitle">
				<h2 class="police_massage"><span>Informations sur <%= @prestataire.last_name %></span></h2>
			</div>
			<div class="row isotopeContainer" id="container">

				<div class="col-sm-8 isotopeSelector infos">

					<div class="col-xs-12">
						<div class="innerWrapper">
							<div class="orderBox  patternbg">
								Apropos
							</div>
							<div class="profile" style="margin-top: -30px;">
								<div class="row">
									<div class="col-sm-6">
										<div class="UserInfos">
											<ul class="profilUser">
												<li><strong>Nom : </strong> <span class="paramsuser"><%= @prestataire.last_name %></span></li>
												<li><strong>Prenom : </strong><span class="paramsuser"><%= @prestataire.first_name %></span></li>
												<li><strong>Sexe : </strong><span class="paramsuser"><%= @prestataire.sexe %></span></li>
												<li><strong>Né(e) le : </strong><span class="paramsuser"><%= @prestataire.date_of_birth %></span></li>
												<li><strong>Raison sociale : </strong><span class="paramsuser"><%= @prestataire.raison_sociale %></span></li>
												<li><strong>Siren : </strong><span class="paramsuser"><%= @prestataire.siren %></span></li>
												<li><strong>Mail : </strong><span class="paramsuser"><%= @prestataire.email %></span></li>
											</ul>
										</div>
									</div>
									<div class="col-sm-6">
										<div class="UserInfos">
											<ul class="profilUser">
												<li><strong>Téléphone : </strong><span class="paramsuser"><%= @prestataire.tel %></span></li>
												<li><strong>Pays : </strong><span class="paramsuser"><%= @prestataire.pays %></span></li>
												<li><strong>Ville : </strong><span class="paramsuser"><%= @prestataire.ville %></span></li>
												<li><strong>Adresse : </strong><span class="paramsuser"><%= @prestataire.adresse %></span></li>
												<li><strong>Complement d'adresse : </strong><span class="paramsuser"><%= @prestataire.adresse_complet %></span></li>
												<li><strong>Code Postal : </strong><span class="paramsuser"><%= @prestataire.zip_code %></span></li>
											</ul>
										</div>
									</div>
								</div>
								<br> 
								<div class="row">
									<div class="col-sm-3"></div>
									<div class="col-sm-3">
										<ul class="list-inline fullRoundBtn">
											<li class="li"><a href="<%= index_prestataires_path %>" class="btn btn-common btn-full-round btn-theme">Retour</a></li>
										</ul>
									</div>

									<div class="col-sm-3">

										<ul class="list-inline fullRoundBtn">
											<li class="li"><a href="<%=edit_prestataires_path(@prestataire.id)%>" class="btn btn-common btn-full-round btn-theme">Modifier</a></li>
										</ul>
									</div>
									<div class="col-sm-3"></div>

								</div>



							</div>
						</div>
					</div>
				</div>


				<div class="col-sm-4 isotopeSelector infos">

					<div class="col-xs-12">
						<div class="innerWrapper">
							<div class="orderBox  patternbg">
								Activités
							</div>
							<div class="profile" style="margin-top: -30px;">
								<div class="row">
									<div class="col-sm-6">
										<div class="UserInfos">
											<ul class="profilUser">
												<li><strong>Services </strong> <span class="">		<ul>
													<% @services.each do |service| %>
													<li><%= service.name %></li>
													<% end %>
												</ul>
											</span></li>
											<li><strong>Pays  </strong><span class="">
												<ul>
													<% @countries.each do |country| %>
													<li><%= country.name %></li>
													<% end %>
												</ul>
											</span></li>

											<li><strong>Departements  </strong><span class="">

												<ul>
													<% if @departments.length < 3 %>
													<% @departments.each do |department| %>

													<li><%= department.name %></li>
													<% end %>

													<% else %>
													<% @departments[0..1].each do |department| %>

													<li><%= department.name %></li>
													<% end %>



													<span id="lirelasuite" style="display:none;width:200px;"> 
														<% @departments[2..].each do |department| %>

														<li><%= department.name %></li>
														<% end %>

													</span> 

													<a href="javascript:void(0)" class="lire-btn" id="more" aria-hidden="true" onclick="document.getElementById('lirelasuite').style.display = 'block'; this.style.display = 'none';">Plus...</a href="">





														<% end %>
													</ul>
												</span></li>
											</ul>
										</div>
									</div>
								</div>

							</div>
						</div>
					</div>
				</div>



			</div>
		</section>
	</div>


	<!-- JAVASCRIPTS -->
	<script src="plugins/jquery/jquery.min.js"></script>
