<center>
  <div class="mdp-oublie">
<h2>Changer votre mot de passe</h2>
<br><br><br>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nouveau mot de passe", class:"editMdp" %>
    <% if @minimum_password_length %>
      <% @minimum_password_length %></em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "nouveau-password",placeholder:"6 caractÃ¨res minimum", :required => true, class:"formMdpEdit" %>
  </div>
 

  <div class="field">
    <%= f.label :password_confirmation, "Confirmer", class:"editMdp" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",:required => true, class:"formMdpEdit" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Valider", class:"btn btn-primary btn-block btn-mdp"%>
  </div>
<% end %>

<%= render "clients/shared/links" %>
 </div>
</center>
